@model IEnumerable<ITPM_Code_Complexity_Tool.Models.CdueToSize>

@{
    var fromURL = Request.Params["fileName"];

    if (fromURL == null)
    {
        foreach (var name in ViewBag.FILES_FROM_UPLOAD)
        {
            fromURL = name.FILE_NAME;
        }

    }
}

<!DOCTYPE html>
<head>
    <title>Size Factor</title>
    <link href="~/Content/style1.css" rel="stylesheet" />
    <link href="~/Content/Cize,Variable,Methods_CSS.css" rel="stylesheet" />
</head>
<body>

    <h1 style="color:white;">Displaying the complexity of a program due to Size</h1>

    @*set weight again*@
    <button type="button" onclick='window.location.href = "../ComplexitySizeVariablesMethods/SetWeightSize?fileName=@fromURL"' class="btn btn-success">
        Set Weight Again
    </button>

    @*go to toool menu*@
    <button type="button" onclick='window.location.href = "../Upload/Tool_Home?fileName=@fromURL"' class="btn btn-primary">
        Go Back To Tool Menu
    </button>


    <br />
    <br />

    <table style="color: black;">
        <tr id="ROW1">
            <td>Line No</td>
            <td>Code Line</td>
            <td>Nkw</td>
            <td>Nid</td>
            <td>Nop</td>
            <td>Nnv</td>
            <td>Nsl</td>
            <td>Cs</td>
        </tr>

        @{
            foreach (var item in Model)
            {
                <tr style="padding:23px;">
                    <td> @item.lineNo </td>
                    <td> @item.CODELINE </td>
                    @if (item.keywordCount != 0)
                    {
                        <td> @item.keywordCount </td>
                    }
                    else
                    {
                        <td></td>
                    }
                    @if (item.identifires != 0)
                    {
                        <td> @item.identifires </td>
                    }
                    else
                    {
                        <td></td>
                    }
                    @if (item.operatorCount != 0)
                    {
                        <td> @item.operatorCount </td>
                    }
                    else
                    {
                        <td></td>
                    }
                    @if (item.numricalCount != 0)
                    {
                        <td> @item.numricalCount </td>
                    }
                    else
                    {
                        <td></td>
                    }
                    @if (item.stringLiteral != 0)
                    {
                        <td> @item.stringLiteral </td>
                    }
                    else
                    {
                        <td></td>
                    }
                    <td> @item.CI </td>

                </tr>


            }


        }
        <tr id="ROW1">
            <td> Total </td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
                @ViewBag.TotalCs
            </td>

        </tr>
    </table>
</body>
