
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>setWeight</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body style="background: url('../StartPage/images/slide1-01.png')">


    @{
        ViewData["FILE"] = Request.Params["fileName"];
    }

    <div class="container">
        <h1 style="color:white"> Change weight </h1>
        <form class="form-horizontal" action="setIt" method="GET">


            <div class="form-group">
                <label class="control-label col-sm-2" for="ZERO" style="color:white">A class with no inheritance (direct or indirect) :</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="ZERO" value="@ViewData["NO_CLASS"]">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="ONE" style="color:white">A class inheriting (directly or indirectly) from one user-defined class :</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="ONE" value="@ViewData["ONE_CLASS"]">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="TWO" style="color:white">A class inheriting (directly or indirectly) from two user-defined classes :</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="TWO" value="@ViewData["TWO_CLASS"]">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="THREE" style="color:white">A class inheriting (directly or indirectly) from three user-defined classes :</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="THREE" value="@ViewData["THREE_CLASS"]">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="MORE_FOUR" style="color:white">A class inheriting (directly or indirectly) from more than three user-defined classes :</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="MORE_FOUR" value="@ViewData["MORE_THAN_FOUR"]">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default"> Save </button>
                </div>



        </form>
    </div>

</body>
</html>
