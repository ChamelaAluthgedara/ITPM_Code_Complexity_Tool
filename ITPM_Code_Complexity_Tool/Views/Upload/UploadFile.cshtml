
@{
    Layout = null;
}

@{
    ViewBag.Title = "UploadFile";
}

<head>
    <title>File Upload</title>
    <link href="~/Content/style1.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>

<h1 style="color:white;  font-weight:bold" align="center"> Upload Your Code File(s) </h1>

@using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div background-color="white">
        <div align="center">
            <br /><br /><br />

            <button type="button" class="btn btn-danger">@Html.TextBox("files", "", new { type = "file", multiple = "multiple", accept = ".java,.cpp,.zip" }) </button>
            <br /><br /><br />


            <div align="center">
                <button type="submit" class="btn btn-danger btn-group-xs"> Upload  </button>
                @ViewBag.Message

            </div>
        </div>
    </div>

   
    

        <li style="color:black;font-weight:bold;background-color:aliceblue;text-align:center;margin-top:290px;vertical-align:bottom;" class="list-group-item" >
            <ul>* When you're uploading multiple files, Please select files with pressing the 'ctrl' button. *</ul>
            <ul>* When you're uploading a zip file, Please make sure the zip file contains only multiple files, not folders. (All the codes files must be in the root of the zip file) * </ul>
        </li>
 
    
 
}
